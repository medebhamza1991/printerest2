{% extends "base.html.twig" %}
{% block body %}
	<div class="container">
		<div class="col-md-12 row d-flex justify-content-center">
			<div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
				<div class="col p-4 d-flex flex-column position-static">
					<h2 class="d-inline-block mb-2 text-success">{{pint.name}}</h2>
					<div class="mb-1 text-muted">Importée par : {{ pint.user.completeName }}</div>
					<div class="mb-1 text-muted">publiée le : {{ pint.createAt|date("m/d/Y") }}</div>
					<p class="mb-auto"> {{ pint.description }} </p>
				</div>
				<div class="col-auto d-none d-lg-block">
					<img src=" {{ asset('uploads/pins/' ~ pint.picture) }} " class="img-thumbnail" alt="image" width="400" height="500">
				</div>
			</div>
    	</div>
		<!-- zone des commantaire -->
		<div class="commentZonz col-md-6 row d-flex justify-content-center border" style="border-radius: 10px; float: none; margin: 0 auto; background-color:#F2F4F4">
			<div class="mb-3 newComment">			
				<div class="row mt-3 mb-3 comment">
					<div class="col-md-1">
						<img style="height: 32px; width: 32px;" src="{{ asset('image/comment.jpg') }}" class="rounded-circle" alt="Cinque Terre">
					</div>
					<div class="col-md-10">
						<input class="" type="text" value="" style="width:100%;  border-radius: 10px;height:100% " />
					</div>
					<div class="col-md-1">
						<i class="bi bi-capslock"></i>
					</div>
				</div>
			</div>

			<div class="listComment">
				<div class="row mt-3 mb-3 comment">
					<div class="col-md-1">
						<img style="height: 32px; width: 32px;" src="{{ asset('image/comment.jpg') }}" class="rounded-circle" alt="Cinque Terre">
					</div>
					<div class="col-md-11">
						<p>Paragraph of text beneath the heading to explain the heading. We'll add onto it with another </p>
					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}
